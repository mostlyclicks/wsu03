<script>
  
   $(document).ready(function() {
    
      $('ul#myRoundabout li').blur(function() {
        var index = $('ul#myRoundabout li').index(this) + 1;
        $('#c' + index).css('display','none');
        $('#r' + index).css('width','106px');
        $('#r' + index).css('height','80px');
        $('#r' + index).css('background-position','0px 0px');
      });
      $('ul#myRoundabout li').focus(function() {
        var index = $('ul#myRoundabout li').index(this) + 1;
        $('#c' + index).css('display','block');
        $(".myContent-inner").css('display','block');
        $('#r' + index).css('width','102px');
        $('#r' + index).css('height','76px');
        $('#r' + index).css('background-position','-2px -2px');
      });
      $('ul#myRoundabout').roundabout({
        // shape: 'waterWheel',
        minOpacity: 0.8,
        minScale: 1.0,
        maxScale: 1.0,
        startingChild: 3,
        btnNext: '#next',
        btnPrev: '#previous'
      });
      
 
   });

</script> 
